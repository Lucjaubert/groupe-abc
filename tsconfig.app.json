{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"]
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/app/**/*.ts"],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/main.server.ts",
    "src/environments/environment.prod.ts",
    "src/environments/environment.ts"
  ]
}
