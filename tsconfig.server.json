{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node"],
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "sourceMap": false
  },
  "files": [
    "src/main.server.ts",
    "src/types/weglot.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/main.ts"
  ]
}
